{#
/**
 * @file
 * Default theme implementation for a chat thread page.
 *
 * Available variables:
 * - thread: The thread entity.
 * - messages: An array of rendered message entities.
 * - form: The render array for the message input form.
 * - current_user_id: The ID of the currently logged-in user.
 * - attributes: HTML attributes for the containing element.
 *
 * @see match_messaging_theme()
 * @see \Drupal\match_messaging\Controller\ChatController::viewThread()
 */
#}
{# Add specific classes for styling #}
<div{{ attributes.addClass('chat-thread-container') }}>

  {# Area to display messages #}
  <div class="chat-messages-area" id="chat-messages-area">
    {% if messages is not empty %}
      {{ messages }} {# Assumes messages are already rendered #}
    {% else %}
      <p class="no-messages">{{ 'No messages yet. Start the conversation!'|t }}</p>
    {% endif %}
  </div>

  {# Message input form #}
<div class="chat-form-area" id="message-form-wrapper">

    {{ form }}
  </div>

</div>
{# Optional: Add some basic CSS or JS for auto-scrolling #}
<style>
.chat-thread-container {
  display: flex;
  flex-direction: column;
  border: 1px solid #ccc;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 1em;
   font-family: sans-serif;
}

#chat-messages-area {
  min-height: 400px;
}

.chat-messages-area {
  flex-grow: 1;
  overflow-y: auto;
  padding: 15px;
  height: 400px;
  background-color: #f9f9f9;
  border-bottom: 1px solid #ccc;
}

.chat-form-area {
  padding: 15px;
  background-color: #eee;
  min-height: 400px;
}

.chat-form-area form {
  display: flex;
  gap: 10px;
min-height: 400px;

}

.chat-form-area textarea {
  flex-grow: 1;
  border-radius: 4px;
  border: 1px solid #ccc;
  padding: 8px 10px;
  resize: vertical; /* Allow vertical resize */
  min-height: 400px; /* Minimum height */
}

.chat-form-area .form-actions input[type="submit"] {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s ease;
}
.chat-form-area .form-actions input[type="submit"]:hover {
    background-color: #0056b3;
}


.no-messages {
  text-align: center;
  color: #888;
  padding: 20px;
}

#chat-messages-area {
  /* Define a maximum height for the message area */
  max-height: 400px; /* Adjust this value as needed for your layout */

  /* Enable vertical scrolling when content overflows */
  overflow-y: auto;

  /* Optional: Add some padding for better readability */
  padding: 10px;

  /* Optional: Add a border to visually separate the message area */
  border: 1px solid #ccc;

  /* Add flex properties if this is part of a flex container */
  /* If your layout uses Flexbox for the chat area, you might need: */
  /* flex-grow: 1; */
  /* flex-shrink: 1; */
  /* flex-basis: 0%; */
}

/* Styles moved to match-message.html.twig and preprocess */

</style>

<script>
// Basic auto-scroll to bottom
(function () {
  const messagesArea = document.getElementById('chat-messages-area');
  if (messagesArea) {
    messagesArea.scrollTop = messagesArea.scrollHeight;

    // Optional: Use MutationObserver for new messages if not using AJAX/WebSockets
    // This is a simple example and might need refinement
    const observer = new MutationObserver(function(mutations) {
        messagesArea.scrollTop = messagesArea.scrollHeight;
    });
    observer.observe(messagesArea, { childList: true });
  }
})();
</script>
